{
  "name": "mongodb-api-server",
  "version": "1.0.0",
  "description": "Node.js TypeScript API server for MongoDB operations",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project config/build/tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --config config/build/jest.config.js",
    "test:watch": "jest --config config/build/jest.config.js --watch",
    "test:coverage": "jest --config config/build/jest.config.js --coverage",
    "test:integration": "jest --config config/build/jest.config.js --testPathPattern=integration",
    "test:e2e": "jest --config config/build/jest.config.js --testPathPattern=e2e",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -f config/docker/Dockerfile -t api-server:latest .",
    "docker:test": "docker run --rm api-server:latest npm test"
  },
  "keywords": ["nodejs", "typescript", "mongodb", "api", "express"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "dotenv": "^17.2.2",
    "express-rate-limit": "^8.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "kafkajs": "^2.2.4",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.1.1",
    "supertest": "^7.1.4",
    "@types/supertest": "^6.0.2",
    "mongodb-memory-server": "^10.2.0",
    "testcontainers": "^11.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
